{
  "name": "sfpowerscripts",
  "description": "Azure DevOps Extension for Salesforce Development",
  "repository": {
    "type": "git",
    "url": "https://github.com/azlamsalam/sfpowerscripts.git"
  },
  "keywords": [
    "vsts",
    "tfs"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build:clean": "rimraf build && shx mkdir build",
    "build:copy": "node make copy",
    "build:npm:tasks": "glob-exec --parallel --foreach \"build/BuildTasks/*/tsconfig.json\" -- \"cd {{file.dir}} && npm install --no-update-notifier --no-progress\"",
    "build:npm:widgets": "glob-exec --parallel --foreach \"build/Widgets/*/tsconfig.json\" -- \"cd {{file.dir}} && npm install --no-update-notifier --no-progress\"",
    "build:tasks": "npm run compile:tasks",
    "build:hub": "webpack --mode production",
    "build:widgets": "npm run compile:widgets",
    "compile:tasks": "glob-exec \"build/BuildTasks/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}}\"",
    "compile:widgets": "glob-exec \"build/Widgets/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}}\"",
    "postcompile:tasks": "",
    "lint:tasks": "glob-exec --parallel --foreach \"build/BuildTasks/*/tsconfig.json\" -- \"tslint -p {{file}} -c tslint.json\"",
    "prebuild": "npm run build:clean",
    "build": "npm run build:copy && npm run build:npm:tasks && npm run build:tasks && npm run build:hub",
    "postbuild": "rimraf -g build/BuildTasks/**/*.ts && rimraf -g build/Hub/**/*.tsx && rimraf -g build/Widgets/**/*.ts",
    "package": "npm run build && npm run package:extension",
    "increment:version": "node make incrementversion",
    "package:extension": "tfx extension create --root build --output-path dist --manifest-globs vss-extension.json",
    "publish": "node make.js publish"
  },
  "author": "azlam.abdulsalam",
  "license": "MIT",
  "dependencies": {
    "applicationinsights": "^1.6.0",
    "azure-devops-node-api": "7.2.0",
    "azure-pipelines-task-lib": "^2.8.0",
    "shelljs": "^0.8.3",
    "simple-git": "^1.126.0",
    "azure-devops-extension-sdk": "~2.0.11",
    "azure-devops-ui": "~1.157.0",
    "react": "~16.8.1",
    "react-dom": "~16.8.1",
    "azure-devops-extension-api": "~1.157.0"
  },
  "devDependencies": {
    "@types/react": "~16.8.2",
    "@types/react-dom": "~16.8.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.16",
    "@types/q": "^1.5.2",
    "glob-exec": "^0.1.1",
    "minimist": "^1.2.0",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "shx": "^0.3.2",
    "tfx-cli": "^0.7.9",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.0",
    "typestrict": "^1.0.2",
    "base64-inline-loader": "^1.1.1",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "~1.0.0",
    "file-loader": "~2.0.0",
    "node-sass": "~4.12.0",
    "sass-loader": "~7.1.0",
    "style-loader": "~0.23.1",
    "ts-loader": "~5.2.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  }
}
